<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:QuadroApp.ViewModels"
        x:Class="QuadroApp.KlantImportPreviewWindow"
        x:DataType="vm:KlantExcelPreviewViewModel"
        Width="900"
        Height="600"
        Title="Excel import">


	<DockPanel Margin="10"   Background="#F5F5F5">

		<!-- Buttons -->
		<StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8">
			<Button Content="Annuleren"
                    Command="{Binding CancelCommand}" />

			<Button Content="Importeren"
                    IsEnabled="{Binding CanImport}"
                    Command="{Binding ConfirmCommand}" />
		</StackPanel>

		<!-- DataGrid -->
		<DataGrid ItemsSource="{Binding Rows}"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="All">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Voornaam"
                                    Binding="{Binding Voornaam}" />

				<DataGridTextColumn Header="Achternaam"
                                    Binding="{Binding Achternaam}" />

				<DataGridTextColumn Header="Email"
                                    Binding="{Binding Email}" />

				<DataGridTextColumn Header="Status"
                                    Binding="{Binding ValidationMessage}" />
			</DataGrid.Columns>
		</DataGrid>

	</DockPanel>
</Window>
